package findDna;
import java.util.List;
import java.util.ArrayList;




public class dna {
	

	public static int findStopCodon(String dna, int startIndex, String stopCodon){

        int currIndex = dna.indexOf(stopCodon, startIndex+1);
        while(currIndex != -1 ){
            if((currIndex - startIndex) % 3 == 0){ return currIndex; }
            currIndex = dna.indexOf(stopCodon, currIndex+stopCodon.length());
        }

        return dna.length();
    }
	
	static public String findgene(String dna, int currPos) {
		

		int startIndex=dna.indexOf("ATG",currPos);

		if( startIndex==-1) {
			System.out.println("no hay inicio");
			return  "";
		}
		else {
			int taaIndex = findStopCodon(dna,startIndex,"TAA");
	        int tagIndex = findStopCodon(dna,startIndex,"TAG");
	        int tgaIndex = findStopCodon(dna,startIndex,"TGA");

	        int minIndex = 0;

	        if (taaIndex == -1 || (tgaIndex != -1 && tgaIndex < taaIndex)) {
	            minIndex = tgaIndex;
	        } else { minIndex = taaIndex; }

	        if (minIndex == -1 || (tagIndex != -1 && tagIndex < minIndex)) {
	            minIndex = tagIndex;
	        }

	        if (minIndex == -1 ){ return ""; }
			
			else {
			String gene = dna.substring(startIndex,minIndex+3);
			
			return gene;
			
			}
		}
		
	}
	
	static int findCTG(String dna, int currpos) {
		int Index=dna.indexOf("CTG",currpos);
		if( Index==-1) {
			System.out.println("no hay inicio");
			return  dna.length();}
			else {
				
			
		int newcurrpos=Index+3;
		return newcurrpos;
			}
	}
	
	public static void CreateGeneList(String dna){
		 int startIndex = 0;
		 int flag=0;
		 ArrayList<String> GeneList = new ArrayList<String> ();
		 
	while ( flag==0 ) {
        String gene = findgene(dna, startIndex);
        
        if (gene.isEmpty()) { flag=-1; break; }
        GeneList.add(gene);
        startIndex = dna.indexOf(gene, startIndex) + gene.length();
        System.out.println("startind = " + startIndex);
    }
	
	  for (String g : GeneList) {
	         System.out.println("gene = " + g);
	      }
	  System.out.println("#ofgenes = " + GeneList.size());
    }
	public static void main (String[] args) {
		
		String dna="\";";
		CreateGeneList( dna);
		
	}}


